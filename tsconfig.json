{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "lowcode-components": [
                "src/index.ts"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        ".storybook/**/*.stories.ts"
    ]
}